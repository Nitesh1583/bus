<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/transback"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginRight="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_25sdp"></ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/transprofile"
            android:layout_weight="1"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:layout_gravity="center"
            android:src="@drawable/ellipse"></de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/round"
        android:iconifiedByDefault="false"
        android:queryHint="Search here..."></SearchView>



    <LinearLayout
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_71sdp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bigrec"
        android:orientation="vertical">


        <TextView
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Wallet"
            android:textSize="15dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Rs. 500"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>


            <Button
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/busbutton"
                android:backgroundTintMode="multiply"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:text="TOP UP">

            </Button>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/bigrec"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_288sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Bus Name"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Booking seats"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Payment method"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView

                    android:layout_weight="1"
                    android:layout_width="@dimen/_94sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Transaction id"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
                <TextView

                    android:layout_weight="1"
                    android:layout_width="@dimen/_94sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="3689545789"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
            <TextView

                android:layout_weight="1"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/sqaure"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="Rs. 500"
                android:textColor="#000"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="City name to City Name"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="@dimen/_8sdp"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/bigrec"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/_288sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Bus Name"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Booking seats"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Payment method"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView

                    android:layout_weight="1"
                    android:layout_width="@dimen/_94sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Transaction id"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>
                <TextView

                    android:layout_weight="1"
                    android:layout_width="@dimen/_94sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="3689545789"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
            <TextView

                android:layout_weight="1"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/sqaure"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="Rs. 500"
                android:textColor="#000"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="City name to City Name"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="@dimen/_8sdp"></TextView>

    </LinearLayout>

    <Button
        android:id="@+id/get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/busbutton"
        android:text="Get 10% off on your first Wallet topup"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFF"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:backgroundTintMode="multiply"></Button>

</LinearLayout>