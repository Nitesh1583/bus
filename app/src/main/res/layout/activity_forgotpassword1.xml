<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="@dimen/_375sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-24dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@drawable/rrectangle">
                <ImageView
                    android:id="@+id/buslogo"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginLeft="@dimen/_110sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/busbooklogo">

                </ImageView>

        </LinearLayout>


        <TextView
            android:id="@+id/fp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="#1463A8"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="@dimen/_5sdp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:background="@drawable/round">
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone No."
            android:paddingBottom="@dimen/_8sdp"
            android:layout_margin="@dimen/_5sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:layout_weight="1"
            android:textColor="#000">
        </EditText>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"

                    android:layout_weight="2"
                    android:background="@drawable/busbutton"
                    android:backgroundTintMode="multiply"
                    android:text="send OTP">

                </Button>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
            android:hint="Enter OTP"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:background="@drawable/round"
            android:textColor="#000">
        </EditText>

        <Button
            android:id="@+id/forgotnow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_70sdp"
            android:background="@drawable/busbutton"
            android:text="Forgot Now"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFF"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:backgroundTintMode="multiply"></Button>



</LinearLayout>