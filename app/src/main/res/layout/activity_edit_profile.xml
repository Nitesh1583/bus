<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/_280sdp"
            android:src="@drawable/backk"></ImageView>


        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/round"
            android:iconifiedByDefault="false"
            android:queryHint="Search here..."></SearchView>



        <LinearLayout
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_71sdp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bigrec"
            android:orientation="vertical">


            <TextView
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Wallet"
                android:textSize="15dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Rs. 500"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>


                <Button
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/busbutton"
                    android:backgroundTintMode="multiply"
                    android:drawableLeft="@drawable/ic_baseline_add_24"
                    android:text="TOP UP">

                </Button>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:src="@drawable/profilee"></ImageView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginLeft="@dimen/_110sdp"
                android:layout_marginRight="@dimen/_100sdp"

                android:layout_weight="1"
                android:background="@drawable/busbutton"
                android:backgroundTintMode="multiply"
                android:text="Change pic"
                android:textSize="@dimen/_10sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1">

            </Button>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Personal Details"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"></TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/stroke2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="Full Name"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/stroke2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="Phone No."
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/stroke2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="Email id"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"></EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_59sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke2"
                android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="DOB "
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke2"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Gender"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"></EditText>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/stroke2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="Address"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/stroke2"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="City/State"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"></EditText>


        <Button
            android:id="@+id/savechanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/busbutton"
            android:text="Save Changes"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFF"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:backgroundTintMode="multiply"></Button>


    </LinearLayout>


</ScrollView>
